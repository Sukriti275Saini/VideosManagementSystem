@page "{rId:int}"
@model VideosManagementSystem.Pages.User.ConfirmReturnModel
@{
    ViewData["Title"] = "ConfirmReturn";
}

<div class="container-fluid confirm-page">
    <div class="container">
        <h2 class="confirmdelete-text">Delete!</h2>

        <div class="alert alert-danger">
            <h6>Are you sure you want to delete @Model.confirmvideo.Videos.VideoName?</h6>
        </div>

        <div class="col-12 usrdelete-details">
            <div class="row">
                <div class="col-3 label">Return date : </div>
                <div class="col-9">@Model.confirmvideo.ReturnDate.ToLongDateString()</div>

                <div class="col-12">
                    <form method="post" class="confirm-buttons">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a class="btn btn-light" asp-page="./Dashboard" asp-route-urlname="@Model.confirmvideo.Users.UserName">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
