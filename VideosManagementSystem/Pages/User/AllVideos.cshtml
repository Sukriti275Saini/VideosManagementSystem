@page
@model VideosManagementSystem.Pages.User.AllVideosModel
@{
    ViewData["Title"] = "AllVideos";
}


<div class="container-fluid allvideos">
    <div class="container">
        <div class="heading-allvids">
            <h1>All Videos :</h1>
        </div>

        <p class="searchvideo">Type a video name to search</p>
        <form method="get">
            <div class="form-group">
                <div class="input-group search-section">
                    <input type="search" class="form-control search-input" asp-for="searchVideo" autocomplete="off" />
                    <span class="input-group-btn">
                        <button class="btn" type="submit">
                            <i class="fas fa-search search-logo"></i>
                        </button>
                    </span>
                </div>
            </div>
        </form>

        <div class="row">
            @foreach (var video in Model.AllVideo)
            {
                <div class="col-3">
                    <div class="single-video card">
                        <div class="card-header videoname">
                            <h4>@video.VideoName</h4>
                        </div>
                        <div class="card-body videoimg">
                            <img class="img-thumbnail videomain-img" src="~/Images/movies/@video.VideoImage" alt="cover image" />
                        </div>
                        <div class="card-footer videoimgbottom">
                            <h6>Language : @video.Language</h6>
                            <p>Year: @video.YearOfRelease</p>
                            <a role="button" class="btn btn-block" asp-page="./VideoDetails" asp-route-vId="@video.VideoId">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>