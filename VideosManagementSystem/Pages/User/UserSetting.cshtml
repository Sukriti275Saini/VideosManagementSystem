@page "{username}"
@model VideosManagementSystem.Pages.User.UserSettingModel
@{
    ViewData["Title"] = "UserSetting";
}

<div class="container-fluid usersettings-page">
    <div class="container">
        <div class="first-profile-div">
            <h2 class="profile-heading col-12">@Model.userDetails.FullName's Profile</h2>
        </div>

        <div class="profile-details align-self-center">
            <div class="row">
                <div class="col-3 text-center">
                    <img class="img-thumbnail userdetails-img" src="~/Images/users/@Model.userDetails.ProfilePicture" alt="pro-img" />
                </div>
                <div class="col-7 usersettings-details">
                    <div class="row">
                        <div class="col-3"><h5>Username:</h5></div>
                        <div class="col-9"><h5>@Model.userDetails.UserName</h5></div>

                        <div class="col-3"><h5>Email:</h5></div>
                        <div class="col-9"><h5>@Model.userDetails.Email</h5></div>

                        <div class="col-3"><h5>Date of Birth:</h5></div>
                        <div class="col-9"><h5>@Model.userDetails.DateOfBirth.Date.ToShortDateString()</h5></div>

                        <div class="col-3"><h5>Phone Number:</h5></div>
                        <div class="col-9"><h5>@Model.userDetails.PhoneNo</h5></div>

                        <div class="col-3"><h5>Address:</h5></div>
                        <div class="col-9"><h5>@Model.userDetails.Address</h5></div>
                    </div>
                </div>
                <div class="col-2 text-center">
                    <div class="row">
                        <div class="col-12"><a role="button">Edit Profile</a></div>
                        <div class="col-12"><a role="button">Delete Account</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

