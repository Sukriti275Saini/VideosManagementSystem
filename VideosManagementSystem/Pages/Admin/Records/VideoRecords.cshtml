@page
@model VideosManagementSystem.Pages.Admin.Records.VideoRecordsModel
@{
    ViewData["Title"] = "VideoRecords";
    Layout = "~/Pages/Admin/_AdminLayout.cshtml";
}

<div class="container">

    <h1 class="allusers-heading">All Records :</h1>

    <table class="table table-responsive table-striped table-hover allusers-table col-12">
        <thead class="thead-dark">
            <tr>
                <th>Record Id</th>
                <th>User Image</th>
                <th>User Name</th>
                <th>Video Image</th>
                <th>Video</th>
                <th>Issue Date</th>
                <th>Return Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.allrecords)
            {
            <tr>
                <td>@r.RecordId</td>
                <td>
                    <img class="record-userimg img-thumbnail" src="~/Images/users/@r.Users.ProfilePicture" alt="user-img" />
                </td>
                <td>@r.Users.UserName</td>
                <td>
                    <img class="record-userimg img-thumbnail" src="~/Images/movies/@r.Videos.VideoImage" alt="video-img" />
                </td>
                <td>@r.Videos.VideoName</td>
                <td>@r.IssueDate.Date.ToShortDateString()</td>
                <td>@r.ReturnDate.Date.ToShortDateString()</td>
                <td>
                    <a class="btn delete-btn" asp-page="./DeleteUser">View Record</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>


